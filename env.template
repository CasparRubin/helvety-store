# Supabase Project URL
# DESCRIPTION: RESTful endpoint for querying and managing your database
NEXT_PUBLIC_SUPABASE_PROJECT_URL=your_supabase_project_url_here

# Supabase Publishable key
# DESCRIPTION: This key is safe to use in a browser if you have enabled Row Level Security (RLS) for your tables and configured policies.
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_supabase_publishable_key_here

# Supabase Secret keys
# DESCRIPTION: These API keys allow privileged access to your project's APIs. Use in servers, functions, workers or other backend components of your application.
# WARNING: Never expose this key to the client!
SUPABASE_SECRET_KEY=your_supabase_secret_key_here

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================

# Stripe Secret Key (server-side only)
# DESCRIPTION: Used for server-side API calls to Stripe. Never expose this key to the client!
# WARNING: Never expose this key to the client!
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Publishable Key (client-side safe)
# DESCRIPTION: Used for Stripe.js on the client side. Safe to expose in browser.
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret
# DESCRIPTION: Used to verify webhook signatures from Stripe
# Get this from your Stripe Dashboard -> Developers -> Webhooks -> Signing secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs
# DESCRIPTION: Price IDs from Stripe Dashboard for each product tier
STRIPE_HELVETY_PDF_PRO_MONTHLY_PRICE_ID=price_your_price_id_here
STRIPE_HELVETY_SPO_EXPLORER_BASIC_MONTHLY_PRICE_ID=price_your_price_id_here
STRIPE_HELVETY_SPO_EXPLORER_ENTERPRISE_MONTHLY_PRICE_ID=price_your_price_id_here

